    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
        }
        .calculator {
            border: 1px solid #ccc;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .calculator input {
            width: 100%;
            height: 40px;
            font-size: 18px;
            margin-bottom: 10px;
            text-align: right;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 5px;
        }
        .calculator button {
            width: 23%;
            height: 40px;
            font-size: 18px;
            margin: 5px 1%;
            border: 1px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
            background-color: #e0e0e0;
        }
        .calculator button.operation {
            background-color: #ffc107;
        }
        .calculator button.equals {
            background-color: #28a745;
            color: #fff;
        }
